<h1 class="title mt-3 has-text-centered">Ficha de Anamnese</h1>

<% if @qrcode %>
  <div class="columns is-centered">
    <div class="column is-2">
      <%= @qrcode.as_svg(viewbox: true).html_safe %>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-12">
      <div class="has-text-weight-bold has-text-centered"><%= new_customer_anamnesis_sheet_url(@customer, token: @token) %></div>
    </div>
  </div>
<% else %>
  <%= render 'form', anamnesis_sheet: @anamnesis_sheet, customer: @customer %>
<% end %>

<div class="has-text-centered">
  <%= link_to "Voltar para Cliente", @customer, class: 'button is-link' %>
</div>
