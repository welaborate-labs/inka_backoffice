<%= form_with(model: professional) do |form| %>
  <%= render 'shared/error_messages', resource: professional %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, value: current_user.name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, value: current_user.email %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, value: current_user.phone %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :document, style: "display: block" %>
    <%= form.text_field :document %>
  </div>

  <div>
    <%= form.label :avatar, style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
