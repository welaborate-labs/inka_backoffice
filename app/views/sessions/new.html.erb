<div class="columns is-centered mt-6">
  <div class="column is-4">
    <%= form_tag "/auth/identity/callback", class:"box" do %>
      <div class="field">
        <%= label_tag :auth_key, "Email", class: "label" %>
        <div class="control">
          <%= text_field_tag :auth_key, nil, class: "input" %>
        </div>  
      </div>

      <div class="field">
        <%= label_tag :password, "Password", class: "label" %>
        <div class="control">
        <%= password_field_tag :password, nil, class: "input" %>
        </div>
      </div>

      <div class="actions">
        <%= submit_tag "Login", class: "button is-primary" %>
      </div>
    <% end %>
  </div>
</div>
