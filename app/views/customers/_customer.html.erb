<tr id="<%= dom_id customer %>">
  <td>
    <%= customer.name %>
  </td>

  <td>
    <%= customer.email %>
  </td>

  <td>
    <%= customer.phone %>
  </td>

  <td>
    <%= customer.document %>
  </td>

  <td>
    <%= customer.city %>
  </td>

  <td>
    <%= customer.state %>
  </td>

  <td>
    <%= link_to "Ver", customer, class: "button is-link is-small" %>
    <%= link_to "Editar", edit_customer_path(customer), class: "button is-primary is-small" %>
    <%= link_to "Deletar", customer, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "button is-danger is-small" %>
    <%= link_to "Reservas em Progresso", customer_bookings_in_progress_path(customer.id), class: "button is-primary is-small" %>
  </td>
</tr>
