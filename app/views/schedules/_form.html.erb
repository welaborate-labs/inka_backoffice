<div class="columns mt-6 is-centered">
  <div class="column is-3">
    <%= form_with(model: schedule, class: "contents box") do |form| %>
      <%= render 'shared/error_messages', resource: schedule %>
      <div class="field">
        <%= form.label :Dia, class: "label" %>
        <div class="control">
          <div class="select is-fullwidth">
            <%= form.select :weekday, Schedule.weekday_attributes_for_select %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= form.label :começa_em, class: "label" %>
        <%= form.text_field :starts_at, class: "input" %>
      </div>
      <div class="field">
        <%= form.label :termina_em, class: "label" %>
        <%= form.text_field :ends_at, class: "input" %>
      </div>
      <div class="field">
        <%= form.label :intervalo_começa_em, class: "label" %>
        <%= form.text_field :interval_starts_at, class: "input" %>
      </div>
      <div class="field">
        <%= form.label :intervalo_termina_em, class: "label" %>
        <%= form.text_field :interval_ends_at, class: "input" %>
      </div>
      <div class="buttons is-centered">
        <%= form.submit class: "button is-primary" %>
      </div>
    <% end %>
    <%= link_to 'Voltar para agendamentos', schedules_path, class: "tag is-link is-medium" %>
  </div>
</div>
