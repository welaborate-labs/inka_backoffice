<div class="columns is-centered mt-6">
  <div class="column is-narrow">
    <h1 class="title has-text-centered">Nova Reserva</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Notas</th>
          <th>Status</th>
          <th>Cancelado em</th>
          <th>Cliente</th>
          <th>Profissional</th>
          <th>Horário Inicial</th>
          <th>Horário Final</th>
          <th>Duração total</th>
          <th><%= link_to 'Voltar para reservas', bookings_path, class: "tag is-link is-small" %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <div id="bookings">
          <tr><%= render @booking %></tr>
        </div>
      </tbody>
    </table>
  </div>
</div>
