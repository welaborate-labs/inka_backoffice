<h1 class="title is-size-3 mt-5 has-text-centered">Serviços em Andamento</h1>

<div class="buttons is-centered">
  <%= link_to "Voltar para Clientes", customers_path, class: "button is-link" %>
</div>

<div class="columns has-text-centered has-background-light">
  <div class="column">
    <h1 class="has-text-weight-bold">Profissional</h1>
  </div>
  <div class="column">
    <h1 class="has-text-weight-bold">Nome do(s) Serviço(s)</h1>
  </div>
  <div class="column">
    <h1 class="has-text-weight-bold">Duração</h1>
  </div>
  <div class="column">
    <h1 class="has-text-weight-bold">Preço</h1>
  </div>

  <div class="column"></div>
</div>

<%= form_with(model: Bill, url: customer_bookings_in_progress_to_completed_path) do |form| %>
  <% @bookings.each do |booking| %>
    <div class="columns is-vcentered has-text-centered">
      <div class="column">
        <%= booking.professional_name %>
      </div>
      <div class="column">
        <%= booking.service.title %>
      </div>
      <div class="column">
        <%= booking.service.duration %>
      </div>
      <div class="column">
        <%= format_currency(booking.service.price) %>
      </div>
      <div class="column">
        <%= form.check_box(:bookings, { multiple: true, checked: true }, booking.id, nil) %>
      </div>
    </div>
  <% end %>

  <div class="columns is-vcentered has-text-centered has-background-light">
    <div class="column"></div>
    <div class="column"><h1 class="has-text-weight-bold">TOTAL</h1></div>
    <div class="column"><h1 class="has-text-weight-bold"><%= @total_duration %> Minuto(s)</h1></div>
    <div class="column"><h1 class="has-text-weight-bold"><%= format_currency(@total_price) %></h1></div>
    <div class="column"></div>
  </div>

  <div class="buttons is-centered">
    <div class="field">
      <%= form.label "Aplicar desconto?", class: "label mr-2" %>
    </div>
    <div class="field">
      <%= form.number_field :discount, class: "input", in: 1..100 %>
    </div>
    <div class="field">
      <%= form.label "%", class: "label" %>
    </div>
    <%= form.submit "Finalizar Serviços", class: "button is-primary ml-2" %>
  </div>
<% end %>
