<div class="columns mt-6 is-centered">
  <div class="column is-6">
    <%= form_for @gift_card, class: "box" do |form| %>
    <%= render 'shared/error_messages', resource: @gift_card %>
      <div class="field">
        <label class="label">Nome</label>
        <%= form.text_field :name, class: "input" %>
      </div>

      <div class="columns">
        <div class="column field">
          <label class="label">Preço</label>
          <%= form.number_field :price, step: 0.01, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= form.label 'Modelo de Vale Presente', style: "display: block", class: "label" %>
        <div class="control">
          <div class="select is-fullwidth is-medium">
            <%= form.collection_select :gift_card_template_id, GiftCardTemplate.all, :id, :name, { include_blank: 'selecione...', include_hidden: false } %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= form.label 'Cliente', style: "display: block", class: "label" %>
        <div class="control">
          <div class="select is-fullwidth is-medium">
            <%= form.collection_select :customer_id, Customer.all, :id, :name, { include_blank: 'selecione...', include_hidden: false } %>
          </div>
        </div>
      </div>

      <h3 class="title mt-3 is-size-4 has-text-centered">Serviços</h3>
      <div class="columns is-multiline">
        <%= form.collection_check_boxes :service_ids, Service.all, :id, :title, { include_hidden: false } do |service| %>
          <div class="column is-4">
            <%= service.check_box class: 'checkbox' %>
            <%= service.label class: 'checkbox' %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= form.label 'Bill', style: "display: block", class: "label" %>
        <div class="control">
          <div class="select is-fullwidth is-medium">
            <%= form.collection_select :bill_id, Bill.all, :id, :id, { include_blank: 'selecione...', include_hidden: false } %>
          </div>
        </div>
      </div>

      <div class="buttons is-centered my-6">
        <%= form.submit class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</div>
