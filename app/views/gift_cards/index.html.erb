<div class="columns mt-6 is-centered ">
  <div class="column is-narrow">
    <h1 class="title is-size-2 has-text-centered">Vale Presente</h1>
    <div class="buttons is-centered">
      <%= link_to "Novo Vale Presente", new_gift_card_path, class: "button is-link" %>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Clientes</th>
            <th>Modelos de Vale Presente</th>
            <th>Serviços</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <div id="gift_cards">
            <% @gift_cards.each do |gift_card| %>
              <tr>
                <%= render gift_card %>
              </tr>
            <% end %>
          </div>
        </tbody>
      </table>
  </div>
</div>
