<div class="columns mt-6 is-centered">
  <div class="column is-3">
    <%= form_with(model: product, class: "box") do |form| %>
      <%= render 'shared/error_messages', resource: product %>

      <div class="field">
        <%= form.label :nome, style: "display: block", class: "label" %>
        <%= form.text_field :name, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :sku, style: "display: block", class: "label" %>
        <%= form.text_field :sku, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :unidade, style: "display: block", class: "label" %>
        <div class="control">
          <div class="select is-fullwidth">
            <%= form.select :unit, Product.units.keys.to_a %>
          </div>
        </div>
      </div>

      <div class="buttons is-centered">
        <%= form.submit class: "button is-primary" %>
      </div>
    <% end %>
    <%= link_to "Voltar para produtos", products_path, class: "tag is-medium is-link" %>
  </div>
</div>
