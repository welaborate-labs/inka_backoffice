<h1 class="font-bold text-4xl">Estoque</h1>
<%= link_to "Adicionar novo estoque", new_product_stock_path(@product) %>
<table class="table-fixed">
  <thead>
    <tr>
      <th>Quantidade</th>
      <th>Tipo</th>
      <th>Data da Compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <div id="stocks">
      <% @product.stocks.each do |stock| %>
        <tr>
          <%= render partial: 'stocks/stock', locals: { stock: stock }  %>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>
